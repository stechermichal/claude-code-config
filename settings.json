  "hooks": {
    "PreToolUse": [],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "file=$(cat | jq -r '.tool_input.file_path'); if [[ \"$file\" =~ \\.(ts|tsx|js)$ ]]; then npx prettier --write \"$file\"; fi"
          }
        ]
      }
    ],
    "Notification": []
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); model=$(echo \"$input\" | jq -r '.model.display_name'); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); user=$(whoami); host=$(hostname -s); [[ \"$cwd\" == \"$HOME\"* ]] && dir_display=\"~${cwd#$HOME}\" || dir_display=\"$cwd\"; git_info=\"\"; if git -C \"$cwd\" rev-parse --git-dir > /dev/null 2>&1; then branch=$(git -C \"$cwd\" --no-optional-locks branch --show-current 2>/dev/null); [ -z \"$branch\" ] && branch=$(git -C \"$cwd\" --no-optional-locks rev-parse --short HEAD 2>/dev/null); git_status=\"\"; git -C \"$cwd\" --no-optional-locks diff-index --quiet HEAD -- 2>/dev/null || git_status=\"*\"; [ -n \"$(git -C \"$cwd\" --no-optional-locks ls-files --others --exclude-standard 2>/dev/null)\" ] && git_status=\"${git_status}+\"; git_info=\" (${branch}${git_status})\"; fi; printf \"\\033[36m[%s]\\033[0m \\033[32m%s@%s\\033[0m:\\033[34m%s\\033[0m\\033[33m%s\\033[0m\" \"$model\" \"$user\" \"$host\" \"$dir_display\" \"$git_info\""
  },
